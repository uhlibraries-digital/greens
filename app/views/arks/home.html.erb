<div class="row home-content">
  <div class="col-md-12">
    <div class="home-search">
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <%= form_tag search_path, method: :get, role: "search" do %>
              <div class="form-group">
                <div class="input-group">
                  <%= text_field_tag :q, nil, placeholder: "Search ARKs", id: "search-q", class: "form-control" %>
                  <div class="input-group-btn">
                    <button class="btn btn-default btn-primary" title="Search" type="submit">Submit</button>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <ul class="search-links">
            <li><%= link_to "Browse All", ids_path %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>